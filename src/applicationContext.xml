<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       					   http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
       	
      <bean id="main" class="com.practicas.git.spring.TestingSpring">
		<property name="shows" ref="shower"/>      
      </bean>
      
      <bean id="shower" class="com.practicas.git.spring.ShowingProps">
      	<constructor-arg ref="resources"/>
      </bean>
            
      <bean id="resources" class="com.practicas.git.spring.LoadProperties">
      	<constructor-arg ref="propertie"/>
      </bean>			   

      <bean id="propertie" class="java.util.Properties"/> 	
</beans>